<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalvajesA">

    <fragment
        android:id="@+id/sceneform_fragment"
        class="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/preview_control_panel1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#82212121"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="626dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fillViewport="true">
            <!--  android:layout_alignParentBottom="true"
                        tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="626dp"-->

            <LinearLayout
                android:id="@+id/preview_control_panel"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#82212121"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_alignParentBottom="true">
                <ImageButton
                    android:id="@+id/id_cero"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:src="@drawable/cero"/>
                <ImageButton
                    android:id="@+id/id_uno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="1"
                    android:src="@drawable/uno"
                    tools:layout_editor_absoluteX="130dp"
                    tools:layout_editor_absoluteY="667dp" />

                <ImageButton
                    android:id="@+id/id_dos"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:src="@drawable/dos"/>

                <ImageButton
                    android:id="@+id/id_tres"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:src="@drawable/tres"/>
                <ImageButton
                    android:id="@+id/id_cuatro"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:src="@drawable/cuatro"/>
                <ImageButton
                    android:id="@+id/id_cinco"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:src="@drawable/cinco"/>
                <ImageButton
                    android:id="@+id/id_seis"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:src="@drawable/seis"/>
                <ImageButton
                    android:id="@+id/id_siete"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:src="@drawable/siete"/>
                <ImageButton
                    android:id="@+id/id_ocho"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:src="@drawable/ocho"/>
                <ImageButton
                    android:id="@+id/id_nueve"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:src="@drawable/nueve"/>
                <ImageButton
                    android:id="@+id/id_diez"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="10"
                    android:src="@drawable/diez"/>


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/id_informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/menu"
        android:text="InformaciÃ³n" />
